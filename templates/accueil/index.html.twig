{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}

    <h1 class="text-center">Nos services</h1>


    <div class="col-12 mt-3 mb-5">
        <div class="row row-cols-1 row-cols-md-3 g-4"><!-- Cartes dans une rangée de 3 sur les écrans de bureau -->
            {% for service in services %}
                <div class="col-12 col-md-4">
                    <div class="card mx-3 h-100 d-flex align-items-center">
                        <div class="card">

                            <div class="card mx-3 h-100 border-0">
                                <img class="card-img-top img-fluid mx-auto"
                                     style="max-height: 200px;max-width: 200px;align-content: center"
                                     src="{{ asset('./uploads/service/mini/' ~ service.image) }}" alt="Card image cap">
                                <div class="card-body text-center">
                                    <h5 class="card-title">{{ service.nom }}</h5>
                                    <p class="card-text">{{ service.description }}</p>
                                    <a href="#" class="btn btn-secondary mt-3 text-center">en savoir +</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>


{% endblock %}
